  "spacing": 4, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "group/tray-expander",
    "pulseaudio",
    "bluetooth",
    "network",
    "custom/vpn-menu",
    // "power-profiles-daemon",
    "cpu",
    "backlight",
    "battery",
    "clock",
    "custom/update",
    "custom/power"
  ],

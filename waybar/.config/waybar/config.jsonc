    "menu-actions": {
      "e-home": "nmcli connection up Home", // & nm-applet --indicator",
      "d-home": "nmcli connection down Home", // & killall nm-applet",
      "e-tailscale": "tailscale up", // & tailscale-systray",
      "d-tailscale": "tailscale down", // & killall tailscale-systray",
      "e-nord": "nordvpn connect",
